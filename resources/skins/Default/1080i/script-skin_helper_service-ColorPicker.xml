<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="129">
	<defaultcontrol always="true">3110</defaultcontrol>
	<controls>
    
		<!-- background panel -->
		<control type="image">
			<left>30</left>
			<top>60</top>
			<width>1860</width>
			<height>920</height>
			<aspectratio>stretch</aspectratio>
			<texture border="5">panel.png</texture>
			<animation effect="fade" reversible="false" end="95" time="0" condition="true">Conditional</animation>
			<colordiffuse>FF1b1b1b</colordiffuse>
		</control>
	
        <!--Header-->
        <control type="label">
            <posx>61</posx>
            <posy>60</posy>
            <width min="80" max="1400">auto</width>
            <height>100</height>
            <font>font35_title</font>
			<label>$ADDON[script.skin.helper.service 32011]</label>
            <align>left</align>
            <textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<animation effect="slide" end="80,15" time="0" condition="skin.hastheme(classic)">Conditional</animation>
        </control>

		<control type="panel" id="3110">
			<viewtype label="31438">icons</viewtype>
			<posx>60</posx>
			<posy>175</posy>
			<width>1836</width>
			<height>700</height>
			<orientation>vertical</orientation>
			<onleft>3110</onleft>
			<onright>60</onright>
			<onup>3110</onup>
			<ondown>3010</ondown>
			<preloaditems>4</preloaditems>
			<pagecontrol>60</pagecontrol>
			<itemlayout height="100" width="100">
				<control type="image">
					<width>92%</width>
					<height>92%</height>
					<texture border="5">$INFO[ListItem.Icon]</texture>
				</control>
			</itemlayout>
			<focusedlayout height="150" width="150">
				<control type="image">
					<width>95%</width>
					<height>95%</height>
					<texture border="5">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="textbox">
					<font>font13</font>
					<left>10</left>
					<top>10</top>
					<right>10</right>
					<width>90%</width>
					<height>90%</height>
					<align>left</align>
					<info>ListItem.Label</info>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
			</focusedlayout>
		</control>

		<!-- edit manual -->
		<control type="button" id="3010">
			<left>60</left>
			<top>900</top>
			<width>800</width>
			<height>60</height>
			<font>Reg32</font>
			<onup>3110</onup>
			<ondown>SetFocus(3110,1)</ondown>
			<onright>3011</onright>
			<label>$ADDON[script.skin.helper.service 32012]</label>
			<label2>$INFO[Window(home).Property(colorstring)]</label2>
			<textcolor>white</textcolor>
			<texturenofocus colordiffuse="black" border="5">panel_trans.png</texturenofocus>
		</control>
		
		<!-- None -->
		<control type="button" id="3011">
			<right>60</right>
			<top>900</top>
			<width>800</width>
			<height>60</height>
			<font>Reg32</font>
			<onup>3110</onup>
			<onleft>3010</onleft>
			<label>$ADDON[script.skin.helper.service 32013]</label>
			<textcolor>white</textcolor>
			<texturenofocus colordiffuse="black" border="5">panel_trans.png</texturenofocus>
		</control>
			

	</controls>
</window>
