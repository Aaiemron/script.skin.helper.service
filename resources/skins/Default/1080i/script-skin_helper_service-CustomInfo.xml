<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">5</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!Window.IsActive(VideoFullScreen.xml) + !Window.IsActive(filebrowser)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <control type="group">
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
            <control type="image">
                <posx>630</posx>
                <posy>0</posy>
                <width>1290</width>
                <height>1080</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<animation effect="fade" reversible="false" end="80" time="0" condition="StringCompare(Skin.String(GeneralPanelsOpacity),80)">Conditional</animation>
				<animation effect="fade" reversible="false" end="60" time="0" condition="StringCompare(Skin.String(GeneralPanelsOpacity),60)">Conditional</animation>
				<animation effect="fade" reversible="false" end="40" time="0" condition="StringCompare(Skin.String(GeneralPanelsOpacity),40)">Conditional</animation>
				<animation effect="fade" reversible="false" end="20" time="0" condition="StringCompare(Skin.String(GeneralPanelsOpacity),20)">Conditional</animation>
				<animation effect="fade" reversible="false" end="0" time="0" condition="StringCompare(Skin.String(GeneralPanelsOpacity),0)">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
			
			<!-- close dialog -->
			<control type="button">
				<label></label>
				<include>animation_fade_visible_hidden</include>
				<width>60</width>
				<height>60</height>
				<right>60</right>
                <posy>40</posy>
				<font>-</font>
				<texturefocus colordiffuse="white">touchcontrols/icon_close.png</texturefocus>
				<texturenofocus colordiffuse="bbwhite">touchcontrols/icon_close.png</texturenofocus>
				<aspectratio aligny="bottom">keep</aspectratio>
				<onclick>back</onclick>
				<visible>Skin.HasSetting(EnableTouchSupport)</visible>
			</control>
			
           <!--Header-->
            <control type="label" id="188">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<shadowcolor>black</shadowcolor>
                <align>left</align>
				<height>100</height>
				<label></label>
            </control>
			<!-- subtitle -->
			<control type="label" id="189">
				<posx>700</posx>
				<posy>100</posy>
				<width>800</width>
				<font>Reg36</font>
				<align>left</align>
				<textcolor>aawhite</textcolor>
				<label></label>
            </control>
			
			<!-- hidden label for type -->
			<control type="label" id="190">
				<posx>700</posx>
				<posy>150</posy>
				<width>800</width>
				<font>Reg36</font>
				<align>left</align>
				<textcolor>aawhite</textcolor>
				<label></label>
				<visible>false</visible>
            </control>
			
			<control type="image">
				<posx>680</posx>
                <posy>220</posy>
				<width>800</width>
				<height>260</height>
				<texture border="5">dialogs/default/inner.png</texture>
			</control>
			
			<!--Icon-->
            <control type="image" id="3">
                <right>60</right>
                <posy>20</posy>
                <width>350</width>
                <height>460</height>
                <fadetime>800</fadetime>
                <aspectratio align="right" aligny="bottom">keep</aspectratio>
            </control>
			
            <control type="grouplist">
                <posx>680</posx>
                <posy>220</posy>
				
				<control type="group">
					<height>60</height>
					<control type="label">
						<description>Director</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[20339]:</label>
						<enable>false</enable>
						<disabledcolor>white</disabledcolor>
						<visible>!StringCompare(Control.GetLabel(190),tvshows)</visible>
					</control>
					<control type="label">
						<description>Studio</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[572]:</label>
						<enable>false</enable>
						<disabledcolor>white</disabledcolor>
						<visible>StringCompare(Control.GetLabel(190),tvshows)</visible>
					</control>
					<control type="label" id="191">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<label></label>
					</control>
					<control type="image">
						<width>800</width>
						<height>60</height>
						<texture>dialogs/default/separator.png</texture>
					</control>
				</control>
				
				<control type="group">
					<height>60</height>
					<control type="label">
						<description>Genre</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[515]:</label>
						<enable>false</enable>
						<disabledcolor>white</disabledcolor>
					</control>
					<control type="label" id="192">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<label></label>
					</control>
					<control type="image">
						<width>800</width>
						<height>60</height>
						<texture>dialogs/default/separator.png</texture>
					</control>
				</control>
				
				<control type="group">
					<height>60</height>
					<control type="label">
						<description>Year</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[562]:</label>
						<visible>StringCompare(Control.GetLabel(190),movies)</visible>
					</control>
					<control type="label">
						<description>First Aired</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[20416]:</label>
						<visible>!StringCompare(Control.GetLabel(190),movies)</visible>
					</control>
					<control type="label" id="193">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<label></label>
					</control>
					<control type="image">
						<width>800</width>
						<height>60</height>
						<texture>dialogs/default/separator.png</texture>
					</control>
				</control>
				
				<control type="group">
					<height>60</height>
					<control type="label">
						<description>Rating</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[563]:</label>
						<enable>false</enable>
						<disabledcolor>white</disabledcolor>
					</control>
					<control type="image">
						<!--Stars modern-->
						<posx>250</posx>
						<posy>5</posy>
						<width>220</width>
						<height>45</height>
						<texture fallback="rating/0.0.png">$INFO[Control.GetLabel(194),rating/,.png]</texture>
					</control>
					<control type="label" id="194">
						<width>500</width>
						<posx>500</posx>
						<height>60</height>
						<align>left</align>
						<label></label>
					</control>
				</control>

            </control>
            <control type="image">
                <posx>680</posx>
                <posy>486</posy>
                <width>1200</width>
                <height>430</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox" id="4">
                <description>Plot</description>
                <posx>700</posx>
                <posy>506</posy>
                <width>1160</width>
                <height>388</height>
                <align>justify</align>
                <pagecontrol>60</pagecontrol>
                <label fallback="19055"></label>
				<disabledcolor>white</disabledcolor>
            </control>
			<!--Button Group-->
            <control type="grouplist" id="9000">
                <posx>680</posx>
                <posy>940</posy>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <defaultcontrol>5</defaultcontrol>
				<onup>50</onup>
				<control type="button" id="5">
                    <!--Play-->
                    <width>290</width>
                    <height>80</height>
                    <align>center</align>
                    <label>208</label>
					<include>DialogButtonOther</include>
                </control>
                <control type="button" id="6">
                    <!--Trailer-->
                    <width>280</width>
                    <height>80</height>
                    <align>center</align>
                    <label>20410</label>
					<include>DialogButtonOther</include>
					<enable>!Skin.HasSetting(KioskMode.Enabled)</enable>
                </control>
                <control type="button" id="10">
                    <!--ExtendedInfo-->
                    <width>290</width>
                    <height>80</height>
                    <align>center</align>
                    <label>31269</label>
					<include>DialogButtonOther</include>
					<onclick condition="!System.HasAddon(script.extendedinfo)">ActivateWindow(Videos,plugin://script.extendedinfo)</onclick>
					<onclick condition="StringCompare(Control.GetLabel(190),movies)">RunScript(script.extendedinfo,info=extendedinfo,name=$INFO[Control.GetLabel(188)])</onclick>
					<onclick condition="!StringCompare(Control.GetLabel(190),movies)">RunScript(script.extendedinfo,info=extendedtvinfo,name=$INFO[Control.GetLabel(188)])</onclick>
					<enable>!Skin.HasSetting(KioskMode.Enabled)</enable>
                </control>
            </control>
        </control>
    </controls>
</window>